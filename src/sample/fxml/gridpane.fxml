<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import javafx.geometry.Insets?>
<GridPane xmlns="http://javafx.com/javafx"
          prefWidth="300.0" hgap="10" vgap="10">
    <padding>
        <Insets topRightBottomLeft="10"/>
    </padding>
    <children>
        <Label text="아이디"
               GridPane.columnIndex="0"
               GridPane.rowIndex="0" />
        <TextField GridPane.columnIndex="1" GridPane.rowIndex="0" GridPane.hgrow="ALWAYS"/>
        <Label text="패스워드"
               GridPane.columnIndex="0"
               GridPane.rowIndex="1" />
        <PasswordField GridPane.columnIndex="1" GridPane.rowIndex="1" GridPane.hgrow="ALWAYS"/>
        <HBox GridPane.rowIndex="2"
              GridPane.columnIndex="0"
              GridPane.columnSpan="2"
              alignment="CENTER"
              spacing="10">
           <Button text="로그인"/>
            <Button text="취소"/>
        </HBox>
    </children>
</GridPane>
